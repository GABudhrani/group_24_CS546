    <!-- partial:index.partial.html -->
    <a id="Meeting" href="/meeting">
        <div class="split-pane col-xs-12 col-sm-6 uiux-side">
            <div>
                <div class="text-content">
                    <div class="bold">You want</div>
                    <div class="big">Create a meet?</div>
                </div>
                <!-- <button>Create</button> -->
            </div>
        </div>
    </a>
    <!-- <a id="Meeting" href="/meeting"> -->
    <div class="split-pane col-xs-12 col-sm-6 frontend-side" id="myBtn" style="cursor: pointer">
        <div>
            <div class="text-content">
                <div class="bold">You want</div>
                <div class="big">Join a Meet?</div>
            </div>
            <!-- <button >Join</button> -->
        </div>
    </div>
    <!-- </a> -->
    <div id="myModal" class="modal">
        <!-- Modal content -->
        <div class="modal-content">
            <div class="modal-header">
                <span class="close">&times;</span>
                <h2>Join Meet</h2>
            </div>
            <div class="modal-body">
                <form action="/join" method="post">
                    <div class="input-wrapper">
                        <label for="room">
                            <input type="text" id="room" placeholder="Enter a Meet-ID" name="room" />
                        </label>
                        <i class="bx bxs-user-circle"></i>
                    </div>
                    <div class="input-wrapper">
                        <label for="pass">
                            <input type="password" name="pass" id="pass" placeholder="Enter a Meet Passcode" />
                        </label>
                        <i class="bx bx-key"></i>
                    </div>
                    <div>
                        <button type="submit">
                            Join
                            <i class="bx bx-right-arrow-alt"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="split-pane-line">
        <img src="https://cdn6.f-cdn.com/contestentries/1683444/34515331/5de674acef4c4_thumb900.jpg" style="border-radius: 50%" />
